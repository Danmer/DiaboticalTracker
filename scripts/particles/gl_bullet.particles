// BULLET

gl_grenade
{
    //This is duplicated into textures/, implement directories here:
	map ammo_boxes_d.png
	mesh models/entities/ammo_boxes/gr_grenade.fbx
	mesh_rotation_offset 90 0 0
	geometry mesh
	blend alpha
	max_particles 1
	max_emissions 1
	period 0
	delay 0
	lifetime 0
	//fade_in 0
	//fade_out 0
	velocity 0 0 0
	color_start 1 1 1 1 1 1 1 1
	color_end 1 1 1 1 1 1 1 1
	angular_speed_start 10000
	rotation_start 0 360
	//rotation_end 0 360
	scale_start 1.3 1.3

	acceleration 0 0 0 0 0 0
	range 0
}
gl_embers base_smoke_trail
{
	advance 1
	animation_start 5 8
	animation_speed 15
	geometry quad
	map particle_sheet3.png
	region s3_rl_muzzle_22
	blend add
	max_particles 100
	max_emissions 0
	lifetime 1
	period 0.02
	fade_in 0.1
	fade_out 0.4
	scale_start 3
	scale_end 0
	rotation_start 0 360
	color_start 4 2 0 1
	color_end 5 0 0 0.1
	// acceleration 0 0 -300
	velocity -20 21 50 -10 0 5
	position 0 0 0
	turbulence 0 0
	drag 0.0
    // soft_destruction on
    // this line above was misspelled as soft_destructiyon, fixed spelling and commented it out in case it not working is being relied upon 
}
