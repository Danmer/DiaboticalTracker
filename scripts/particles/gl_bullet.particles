gl_trail
{
	map effects_additive.png
	region r_add_flash2
	//map uvtest.png
	geometry oriented
	trail true

	blend max
	max_particles 150
	max_emissions 0
	lifetime 1
	period 0.025

	rotation_start 0 0
	rotation_end 0 0
	fade_in 0 0
	fade_out 0.001 0.001

	color_start 1.2 0.8 0.2 0.7
	color_end  0 0 0 0
	color_accent true

	scale_start 10
	scale_end 10
	position 0 0 0
	range 0
}
gl_bullet_dynamic_trail
{
	subsystem gl_trail
	//subsystem base_smoke_trail
}


