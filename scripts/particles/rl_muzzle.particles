rl_muzzle_flare
{
	map effects1.png
	region r_flare_1
    animation_speed 30
	max_particles 1
	max_emissions 1
	period 0
	lifetime 0.15
	scale_start 1.25
	scale_end 0.8
	rotation_start 0 360
	blend add
	fade_out 0.5
	position 13 -20 80
	color_start  1 2 1 1
	color_end  0.15 0.1 0
	emitter line 0 0 1
	scale_start 30
	scale_end 100
}

