rl_muzzle_embers
{
	// geometry quad
	map particle_sheet1.png
	region r_embers
	animation_start 
	animation_speed 10
	blend add
	max_particles 20
	max_emissions 20
	lifetime 0.6
	period 0
	fade_in 0.1
	velocity 8 8 40  -8 -8 40
	fade_out 0.15 0.12
	// emitter array 0 0 10 768
	// emitter line 0 0 768
	position 0 0 0
	rotation_start 0 360
	color_start  4 2 0 1
	color_end  4 0 0 1
	emitter line 0 0 1
	turbulence 200
	scale_start 0.1 0.3
	scale_end 0 0
	drag 0.8
}


